<% include partials/header.ejs %>

<h1><%= title %></h1>

<form method="post">
<div class="form-group">
    <label for="title" class="col-sm-2">Title:</label>
    <input name="title" id="title" required/>
</div>
    <div class="form-group">
        <label for="publisher" class="col-sm-2">Publisher:</label>
        <input name="publisher" id="publisher" />
    </div>
    <div class="form-group">
        <label for="genre" class="col-sm-2">Genre:</label>
        <input name="genre" id="genre" required>
    </div>
    <div class="form-group">
        <label for="year" class="col-sm-2">Year:</label>
        <input name="year" id="year" required type="number" min="1970">
    </div>
    <button class="btn btn-success col-sm-2-offset-2">Save</button>
</form>
<% include partials/footer.ejs %>